<?xml version="1.0" encoding="UTF-8"?>
<web-fragment xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd"
    version="3.0">
    <name>${artifactId}</name>
    <description>${name}</description>

    <ordering>
        <before>
            <others />
        </before>
    </ordering>

    <servlet>
        <servlet-name>Jersey Web Application</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>pt.ist.bennu.core.servlets.BennuJerseyRestApplication</param-value>
        </init-param>
        <!-- <init-param>
  			<param-name>com.sun.jersey.spi.container.ContainerRequestFilters</param-name>
  			<param-value>com.sun.jersey.api.container.filter.LoggingFilter</param-value>
		</init-param>
		<init-param>
  			<param-name>com.sun.jersey.spi.container.ContainerResponseFilters</param-name>
  			<param-value>com.sun.jersey.api.container.filter.LoggingFilter</param-value>
		</init-param>-->
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Jersey Web Application</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>CharsetEncodingFilter</filter-name>
        <filter-class>pt.ist.bennu.core.filters.CharsetEncodingFilter</filter-class>
        <init-param>
            <param-name>defaultCharset</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>ContextPathFilter</filter-name>
        <filter-class>pt.ist.bennu.core.filters.ContextPathFilter</filter-class>
    </filter>
    <filter>
        <filter-name>CloseTransactionFilter</filter-name>
        <filter-class>pt.ist.bennu.core.filters.CloseTransactionFilter</filter-class>
    </filter>
    <filter>
        <filter-name>CasAuthenticationFilter</filter-name>
        <filter-class>pt.ist.bennu.core.filters.CasAuthenticationFilter</filter-class>
    </filter>
    <filter>
        <filter-name>SetUserViewFilter</filter-name>
        <filter-class>pt.ist.bennu.core.security.SetUserViewFilter</filter-class>
    </filter>
    <filter>
        <filter-name>I18NFilter</filter-name>
        <filter-class>pt.ist.bennu.core.i18n.I18NFilter</filter-class>
    </filter>
    <!-- filter>
        <filter-name>ProfilingFilter</filter-name>
        <filter-class>pt.ist.bennu.core.filters.ProfilingFilter</filter-class>
    </filter -->
    <filter>
        <filter-name>JerseyAuthenticationFilter</filter-name>
        <filter-class>pt.ist.bennu.core.rest.JerseyAuthenticationFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>ContextPathFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CharsetEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CloseTransactionFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CasAuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SetUserViewFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>I18NFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!-- filter-mapping>
        <filter-name>ProfilingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping -->
    <filter-mapping>
        <filter-name>JerseyAuthenticationFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>
</web-fragment>
