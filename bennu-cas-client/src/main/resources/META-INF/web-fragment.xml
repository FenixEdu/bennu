<?xml version="1.0" encoding="UTF-8"?>
<web-fragment xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd"
	version="3.0">
	<name>bennu-cas-client</name>
	<ordering>
		<before>
			<name>bennu-portal</name>
		</before>
		<after>
			<name>saml-service-provider</name>
		</after>
		<after>
			<name>bennu-core</name>
		</after>
	</ordering>

	<filter>
		<filter-name>casRedirectFilter</filter-name>
		<filter-class>org.fenixedu.bennu.cas.client.filter.CasRedirectFilter</filter-class>
		<async-supported>true</async-supported>
	</filter>
	

	<filter-mapping>
		<filter-name>casRedirectFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>


</web-fragment>
